// The number of movies by country and actor.
db.movies.aggregate({
    /**
     * _id: The id of the group.
     * fieldN: The first field name.
     */
    $group: {
        _id: {
            country: "$country",
            actor: "$actors.last_name"
        },
        num_of_movies: {
            $sum: 1
        }
    }
})
